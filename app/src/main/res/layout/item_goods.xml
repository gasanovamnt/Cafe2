<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="122dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgGood"
        android:layout_width="121dp"
        android:layout_height="102dp"
        android:src="@drawable/img1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/goodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:text="Блины с ягодами и сгущенкой"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgGood" />


    <TextView
        android:id="@+id/goodPrice"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/stroke_text_price_4dp"
        android:fontFamily="sans-serif-medium"
        android:paddingHorizontal="10dp"
        android:paddingVertical="9dp"
        android:text="@string/price_coffee"
        android:textColor="@color/black"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goodName" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bye"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/back_btn_add_order_4dp"
        android:gravity="center"
        android:text="+"
        android:padding="0dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:backgroundTint="@null"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/goodPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/goodPrice"
        app:layout_constraintTop_toTopOf="@+id/goodPrice" />

</androidx.constraintlayout.widget.ConstraintLayout>